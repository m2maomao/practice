page{
  background: #eee;
}
.cover-container{
  background: #42BD56;
  text-align: center;
  padding: 50rpx 0;
}
.book-meta{
  position: relative;
  padding: 20rpx;
  overflow: hidden;
}
.book-meta .meta-info{
  margin-right: 200rpx;
}
.book-title{
  font-weight: bold;
  font-size: 40rpx;
}
.other-meta{
  padding-top: 10rpx;
  color: #888;
  font-size: 30rpx;
}
.meta-info text{
  display: block;
}
.book-meta .range{
  position: absolute;
  top: 30rpx;
  right: 20rpx;
  width: 180rpx;
  background: #fff;
  padding: 20rpx 10rpx;
  text-align: center;
  box-shadow: 2px 2px 10px #ccc;
}
.range .score{
  font-size: 50rpx;
  font-weight: bold;
}
.range .viewers{
  font-size: 30rpx;
}
.range text{
  display: block;
}
.book-intro{
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: #FAFAFA;
}
.intro-header{
  color: #888888;
  font-weight: bold;
  padding: 40rpx 0;
}
.intro-content{
  font-size: 35rpx;
  line-height: 2;
  text-align: justify;
}